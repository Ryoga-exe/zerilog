const Clock = clock_posedge;
const Reset = reset_sync_high;
const Bit = logic1;

pub module SyncReset(
    clk: input Clock,
    rst: input Reset,
    q: output Bit,
) {
    var r: Bit;

    always_ff {
        if_reset {
            r = 0;
        } else {
            r = r + 1;
        }
    }

    comb {
        q = r;
    }
}
